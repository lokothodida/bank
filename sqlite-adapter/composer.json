{
    "name": "lokothodida/bank-sqlite-adapter",
    "authors": [
        {
            "name": "Lawrence Okoth-Odida",
            "email": "lawrence.okothodida@gmail.com"
        }
    ],
    "require": {
        "lokothodida/bank": "@dev",
        "robmorgan/phinx": "^0.10.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "phpstan/phpstan": "^0.10.3"
    },
    "autoload": {
        "psr-4": {
            "lokothodida\\BankSqliteAdapter\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "test"
        ]
    },
    "scripts": {
        "test": [ "@static-analysis", "@unit-test" ],
        "unit-test": [ "phpunit -vv --testdox" ],
        "static-analysis": [ "phpstan analyse src test --level=7" ]
    },
    "repositories": {
        "lokothodida/bank": {
            "type": "path",
            "url": "../app/",
            "symlink": true
        }
    }
}
